set drawbox
set icons true
set ignorecase true
set hidden true
set preview true

map ; push :
map x "delete"

# opening from lf
cmd open ${{
  case $(file --mime-type "$f" -bL) in
    text/*|application/json) $EDITOR "$f";;
    video/*|image/*/application/pdf) xdg-open "$f" & disown;;
    *) xdg-open "$f" ;;
  esac
}} 

# preview
set previewer ~/.config/lf/previewer.sh
set cleaner ~/.config/lf/clear_img.sh
